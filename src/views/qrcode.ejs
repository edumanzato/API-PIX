<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Pix | GerenciaNet | Programador Edu</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        
        .content {
            text-align: center;
        }
        
        img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }
        
        pre {
            margin-top: 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1>QR CODE</h1>
        <img src="<%= qrcodeImage %>">
        <pre id="qrcodeText">
            <%= qrcode %>
        </pre>
    </div>
    
    <script>
        const qrcodeText = document.getElementById("qrcodeText");

        qrcodeText.addEventListener("click", () => {
            const textToCopy = qrcodeText.innerText.trim();

            const textarea = document.createElement("textarea");
            textarea.value = textToCopy;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand("copy");
            document.body.removeChild(textarea);

            alert("Copiado para a área de transferência.");
        });
    </script>
</body>
</html>
